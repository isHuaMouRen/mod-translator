<ui:Page x:Class="MinecraftModTranslator.Pages.PageLoad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinecraftModTranslator.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:icons="clr-namespace:MinecraftModTranslator.Controls.Icons"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLoad">

    <Grid>
        <Grid x:Name="grid_Loading">
            <ui:ProgressRing IsActive="True" Width="50" Height="50"/>
            <TextBlock Text="读取Mod信息中..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" FontSize="15"/>
        </Grid>

        <Grid x:Name="grid_Error" Visibility="Hidden">
            <icons:IconError Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>

            <TextBlock Text="无法加载Mod，请检查Mod文件有效性" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" FontWeight="Bold" FontSize="20" Foreground="#FFFF6464"/>

            <Button x:Name="button_Back" Content="返回" Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Center" Margin="0,180,0,0" Click="button_Back_Click"/>
        </Grid>
    </Grid>
</ui:Page>
