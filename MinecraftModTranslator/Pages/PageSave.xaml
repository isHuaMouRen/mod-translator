<ui:Page x:Class="MinecraftModTranslator.Pages.PageSave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinecraftModTranslator.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:icons="clr-namespace:MinecraftModTranslator.Controls.Icons"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSave">

    <Grid>
        <Grid x:Name="grid_Main">
            <TextBlock Text="选择一个导出方式" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--Mod-->
                <Border x:Name="border_Mod" Width="200" Height="300" BorderThickness="1" Background="Transparent" BorderBrush="Gray" CornerRadius="5" Margin="20" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonUp="Border_MouseLeftButtonUp">
                    <Border.RenderTransform>
                        <ScaleTransform CenterX="100" CenterY="150"/>
                    </Border.RenderTransform>
                    <Grid>
                        <icons:IconJava VerticalAlignment="Top" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,50,0,0" Opacity="0.8"/>
                        <TextBlock Text="Mod文件" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" FontWeight="Bold" FontSize="20"/>
                        <TextBlock Text="导出为Mod文件，直接覆盖原Mod。从根源翻译Mod。缺点是Mod更新时需要重新翻译" TextWrapping="Wrap" Margin="10,190,10,10" HorizontalAlignment="Center" Opacity="0.8"/>
                        <TextBlock Text="格式: .jar" TextWrapping="Wrap" Margin="10,10,10,10" HorizontalAlignment="Center" Opacity="0.8" VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
                <!--Package-->
                <Border x:Name="border_Package" Width="200" Height="300" BorderThickness="1" Background="Transparent" BorderBrush="Gray" CornerRadius="5" Margin="20" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonUp="Border_MouseLeftButtonUp">
                    <Border.RenderTransform>
                        <ScaleTransform CenterX="100" CenterY="150"/>
                    </Border.RenderTransform>
                    <Grid>
                        <icons:IconPackage VerticalAlignment="Top" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,50,0,0" Opacity="0.8"/>
                        <TextBlock Text="资源包 (推荐)" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" FontWeight="Bold" FontSize="20"/>
                        <TextBlock Text="导出为资源包格式，加载此资源包即可享受翻译。Mod更新也不影响 (如提示已损坏或不兼容请忽略)" TextWrapping="Wrap" Margin="10,190,10,10" HorizontalAlignment="Center" Opacity="0.8"/>
                        <TextBlock Text="格式: .zip" TextWrapping="Wrap" Margin="10,10,10,10" HorizontalAlignment="Center" Opacity="0.8" VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
            </StackPanel>

            <Button x:Name="button_Save" Content="确定" Style="{DynamicResource AccentButtonStyle}" MinWidth="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" IsEnabled="False" Click="button_Save_Click"/>
        </Grid>

        <Grid x:Name="grid_Loading" Visibility="Hidden">
            <ui:ProgressRing IsActive="True" Height="50" Width="50"/>
            <TextBlock Text="正在导出..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0"/>
        </Grid>
        
    </Grid>
</ui:Page>
