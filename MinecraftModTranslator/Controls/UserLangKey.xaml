<UserControl x:Class="MinecraftModTranslator.Controls.UserLangKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinecraftModTranslator.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Border BorderThickness="1" BorderBrush="Gray" Grid.Column="0">
            <TextBlock x:Name="textBlock_Key" Text="Key.Key.Key" Margin="5" VerticalAlignment="Center"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Gray" Grid.Column="1">
            <TextBox x:Name="textBox_Original" Text="English" TextWrapping="Wrap" IsReadOnly="True"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Gray" Grid.Column="2">
            <TextBox x:Name="textBox_Translate" Text="简体中文" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="textBox_Translate_TextChanged"/>
        </Border>

        <GridSplitter Grid.Column="0" Width="1"/>
        <GridSplitter Grid.Column="1" Width="1"/>

    </Grid>
</UserControl>
